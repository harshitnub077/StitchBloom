{
    "extends": "@crochetverse/config/tsconfig.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "paths": {
            "@/*": [
                "./*"
            ],
            "@crochetverse/shared": [
                "../../packages/shared/src"
            ],
            "@crochetverse/database": [
                "../../packages/database/src"
            ]
        }
    }
}